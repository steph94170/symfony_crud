{% extends 'themes/base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block description %}Voici la liste de mes contacts{% endblock %}

{% block keywords %}contact, agenda, nouveau{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">nouveau contact</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto"></div>
                    {{ form_start(form)}}
                        <div class="m-3">
                            <label for="contact_form_firstName">Prénom</label>
                            <div class="text-danger">{{form_errors(form.FirstName) }}</div>
                            {{ form_widget(form.FirstName, {'attr': {'class':'form-control'}})}}
                        </div>
                         <div class="m-3">
                            <label for="contact_form_LastName">Nom</label>
                            <div class="text-danger">{{form_errors(form.LastName) }}</div>
                            {{ form_widget(form.LastName, {'attr': {'class':'form-control'}})}}
                        </div>
                          <div class="m-3">
                            <label for="contact_form_email">Email</label>
                            <div class="text-danger">{{form_errors(form.email) }}</div>
                            {{ form_widget(form.email, {'attr': {'class':'form-control'}})}}
                        </div>
                          <div class="m-3">
                            <label for="contact_form_phone">Numéro de téléphone</label>
                            <div class="text-danger">{{form_errors(form.phone) }}</div>
                            {{ form_widget(form.phone, {'attr': {'class':'form-control'}})}}
                        </div>
                          <div class="m-3">
                            <label for="contact_form_comment">Commentaire</label>
                            <div class="text-danger">{{form_errors(form.comment) }}</div>
                            {{ form_widget(form.comment, {'attr': {'class':'form-control'}})}}
                        </div>
                        <div>
                            <input formnovalidate type="submit" class="btn btn-primary shadow">
                        </div>
                    {{form_end(form)}}
        </div>
    </div>      


{% endblock %}